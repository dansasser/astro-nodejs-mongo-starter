---
interface Props {
  label: string;
  value?: string | number;
  theme: { inputList: []; labelList: [] };
  name: string;
}

const { label, value, theme, name } = Astro.props;
---

<div class="p-2 text-center">
  <div class="relative mb-3" data-te-input-wrapper-init>
    <textarea
      class:list={theme.inputList}
      id={name}
      name={name}
      rows="10"
      placeholder="">{value}</textarea
    >
    <label for={name} class:list={theme.labelList}>{label}</label>
  </div>
</div>
